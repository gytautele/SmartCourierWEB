@page
@model ManagementModel
@{ ViewData["Title"] = ""; }
<h1>@ViewData["Title"]</h1>

<div class="parallax-content baner-content" id="home">
    <span><em>Manage</em> your dispatch</span>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="contact-form">
                    <div class="row">
                        <form id="contact" action="" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <input name="dispatch_id_data" class="form-control" id="email" placeholder="Dispatch ID" required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <fieldset>
                                        <form method="post">
                                            <button type="submit" name="searchData" id="form-submit" class="btn" style="padding-top:15px; padding-bottom: 15px;">Manage</button>
                                        </form>
                                        <form method="post">
                                            <button type="submit" name="searchData" id="form-submit" class="btn" style="padding-top:15px; padding-bottom: 15px; margin-top: 10px; margin-bottom: 10px;">Postpone*</button>
                                            <p style="color:white; font-size:10px">*Dispatch will be postponed to the date when courier will be free. You will get the e-mail with details.</p>
                                        </form>
                                        
                                    </fieldset>
                                </div>
                            </div>                            
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map">
                    <iframe width="100%" height="81" frameborder="0" style="border:0" allowfullscreen>
                    </iframe>
                    <table style="width: 100%; color:white">
                        <tr>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Address</th>
                        </tr>
                        <tr>
                            <td>Eve</td>
                            <td>Jackson</td>
                            <td>Perkūnkiemio 18, Vilnius</td>
                        </tr>
                    </table>
                </div>
        </div>
    </div>
</div>


